                        Minimum="0"
                        TickFrequency="0.01"
                        ShowMiddleThumb="True"
                        MiddleSelectedValue="{Binding CurrentExpression, Mode=OneWay}"
                        UpperSelectedValue="{Binding Upper, Mode=TwoWay}" />
                    </StackPanel>
                  </Grid>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </StackPanel>
      </Expander>

